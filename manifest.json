{
    // required by all chrome extensions
    "name": "GeckoTabs",
    "version": "1.0",
    "manifest_version": 2,

    // optional 
    "description": "better momentum tab tool",
    // add icons later

    "browser_action": {
        "default_title": "GeckoTabs",
        "default_popup": "index.html"
    },

    "permissions": [
        "http://*/*", "https://*/*", "activeTab"
    ]
}

